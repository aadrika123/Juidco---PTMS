// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model receipt {
  id                 Int                   @id @default(autoincrement())
  receipt_no         String                @unique
  amount             Int
  date               DateTime              @db.Date
  time               String
  bus_conductor_data busConductorMapping[]
  conductor_id       String
  created_at         DateTime              @default(now()) @map("created_at")
  updated_at         DateTime              @updatedAt @map("updated_at")
}

model onBoardedBusDetails {
  id                   Int      @id @default(autoincrement())
  register_no          String
  vin_no               String   @unique
  pollution_doc        Json
  taxCopy_doc          Json
  registrationCert_doc Json
  created_at           DateTime @default(now()) @map("created_at")
  updated_at           DateTime @updatedAt @map("updated_at")
}

model onBoardedConductorDetails {
  id             Int      @id @default(autoincrement())
  firstName      String
  middleName     String
  lastName       String
  age            String
  bloodGrp       String
  mobileNo       String
  emergencyMobNo String
  emailId        String
  cUniqueId      String   @unique
  adhar_doc      Json
  adhar_no       String   @unique
  fitness_doc    Json
  created_at     DateTime @default(now()) @map("created_at")
  updated_at     DateTime @updatedAt @map("updated_at")
}

model busConductorMapping {
  id           Int       @id @default(autoincrement())
  conductor_id String
  bus_no       String
  date         DateTime
  from_time    Int
  to_time      Int
  receipts     receipt[]
  created_at   DateTime  @default(now()) @map("created_at")
  updated_at   DateTime  @updatedAt @map("updated_at")
}
